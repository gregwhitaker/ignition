{
   "Description":"IAM group for users",
   "Resources":{
      "UserGroup":{
         "Type":"AWS::IAM::Group",
         "Properties":{
            "Path":"/",
            "Policies":[
               {
                  "PolicyName":"User",
                  "PolicyDocument":{
                     "Statement":[
                        {
                           "Effect":"Allow",
                           "NotAction":"iam:*",
                           "Resource":"*"
                        },
                        {
                           "Effect":"Allow",
                           "Action":[
                              "iam:List*",
                              "iam:Get*"
                           ],
                           "Resource":"*"
                        }
                     ]
                  }
               }
            ]
         }
      }
   }
}